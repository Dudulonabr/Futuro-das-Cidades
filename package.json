{
  "name": "futuro-das-cidades",
  "version": "1.0.0",
  "description": "Site profissional sobre cidades inteligentes, sensores urbanos, prédios sustentáveis e mobilidade elétrica",
  "main": "index.html",
  "scripts": {
    "start": "npx live-server --port=3000 --open=/index.html",
    "dev": "npx live-server --port=3000 --open=/index.html --watch=assets",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx clean-css-cli -o assets/css/main.min.css assets/css/main.css && npx clean-css-cli -o assets/css/components.min.css assets/css/components.css && npx clean-css-cli -o assets/css/responsive.min.css assets/css/responsive.css",
    "minify-js": "npx terser assets/js/main.js -o assets/js/main.min.js && npx terser assets/js/calculator.js -o assets/js/calculator.min.js && npx terser assets/js/charts.js -o assets/js/charts.min.js && npx terser assets/js/contact.js -o assets/js/contact.min.js",
    "test": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "validate": "npx html-validate index.html blog.html contato.html",
    "accessibility": "npx pa11y http://localhost:3000",
    "lighthouse": "npx lighthouse http://localhost:3000 --view"
  },
  "keywords": [
    "cidades-inteligentes",
    "smart-cities",
    "sensores-urbanos",
    "predios-sustentaveis",
    "mobilidade-eletrica",
    "urbanismo-sustentavel",
    "iot-urbano",
    "sustentabilidade",
    "tecnologia-urbana"
  ],
  "author": {
    "name": "Futuro das Cidades",
    "email": "contato@futurodascidades.com.br",
    "url": "https://futurodascidades.com.br"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/futurodascidades/site.git"
  },
  "bugs": {
    "url": "https://github.com/futurodascidades/site/issues"
  },
  "homepage": "https://futurodascidades.com.br",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "html-validate": "^8.7.4",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "pa11y": "^7.0.0",
    "terser": "^5.19.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "port": 3000,
    "host": "localhost"
  }
}

